{
	"manifest_version": 2,
	"name": "Pomodoro",
	"version": "1.0",

	"description": "A pomodoro timer",

	"icons": {
		"32": "../assets/icons/tomato-32.png",
		"48": "../assets/icons/tomato-48.png",
		"96": "../assets/icons/tomato-96.png"
	},

	"permissions": ["activeTab"],

	"browser_action": {
		"default_icon": "../assets/icons/tomato-32.png",
		"default_title": "Pomodoro",
		"default_popup": "popup/timer.html"
	}
}
